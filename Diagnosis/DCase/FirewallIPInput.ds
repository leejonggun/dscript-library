import("Syntax.ShellStyle");
import("Type.Json");

boolean FirewallIPInput(Json ctx) {
	boolean ret = true;

//get iptables setting
	String setting = $(sudo iptables -L);
	setting = setting.substring(setting.search("INPUT"), setting.search("FORWARD"));
	String ifconfig = $(echo "${setting}" | grep "DROP");
	ifconfig.concat($(echo "${setting}" | grep "REJECT"));

	if (ifconfig.search("DROP") > -1) {
		System.p("SystemFault:INPUT packet is dropped.");
		ret = false;
	} else if (ifconfig.search("REJECT") > -1) {
		System.p("SystemFault:INPUT packet is rejected.");
		ret = false;
	}

	return ret;
}

void main() {
	Json ctx = new Json();
	System.p(FirewallIPInput(ctx));
}

main();
