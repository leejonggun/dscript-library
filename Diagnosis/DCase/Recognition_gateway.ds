import("dshell");
import("konoha.json");

const DCaseContext = Json;

boolean Connection(DCaseContext ctx) {
	boolean ret = true;

//check whether default gateway is recognized or not
	int gateway = $(netstat -r).search("UG");
	if (gateway == -1) {
		System.p("Network is disconnected.");
		return false;
	};
	return ret;
}

void main() {
	DCaseContext ctx = new DCaseContext();
	System.p(Connection(ctx));
}

main();
